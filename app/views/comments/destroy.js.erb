$(document).ready(function(){
  $('#delete_comment').on('ajax:success', function(e){
    
    $('#comments_count').text("Comments <%= @post.comments.count %>");

    $("#comment_<%= params[:id] %>").remove();

     Toastify({
        text: "Comment deleted with success !",
        position: "center",
        gravity: "top",
        backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
      }).showToast();
  });

  $('#delete_comment').on('ajax:error', function(){
     Toastify({
        text: "Something went wrong !",
        position: "center",
        gravity: "top",
        backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
      }).showToast();
  });
});