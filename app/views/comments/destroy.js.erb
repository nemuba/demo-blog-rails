$(document).ready(function(){
  $('.delete_comment').on('ajax:success', function(e){
    
    $('#comments_count').text('<%= "#{t("page.title.comments")} #{@post.comments.count}" %>');

    $("#comment_<%= params[:id] %>").remove();

     Toastify({
        text: I18n.t('messages.success.destroy', {model: "Comentário"}),
        position: "center",
        gravity: "top",
        backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
      }).showToast();
      $('.delete_comment').text(I18n.t('page.links.delete', {model: "Comentário"}));
  });

  $('.delete_comment').on('ajax:error', function(){
     Toastify({
        text: I18n.t('messages.error.destroy', {model: "Comentário"}),
        position: "center",
        gravity: "top",
        backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
      }).showToast();
  });
});