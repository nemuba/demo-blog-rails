$(document).ready(function(){
  $("form[data-remote='true']").on('ajax:success', function(e){
    $('#contact_name').prop('value', '');
    $('#contact_email').prop('value', '');

    Toastify({
        text: "Contact sent with success.",
        position: "center",
        gravity: "top",
        backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
      }).showToast();
  });

  $("form[data-remote='true']").on('ajax:error', function(e){
    Toastify({
        text: "Something went wrong.",
        position: "center",
        gravity: "top",
        backgroundColor: "linear-gradient(to right, #ff0079, #ff00ac)",
      }).showToast();
  });
})