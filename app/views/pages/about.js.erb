$(document).ready(function(){
    $('#about_page').on("ajax:success", function(){
        $('#root_page').text('<%= t("page.title.about") %>');
        $('#home_page').removeClass('is-warning');
        $('#contact_page').removeClass('is-warning');
        $('#about_page').addClass('is-warning');
        $('#messages').remove();
        $('.app').html("<%= j render 'about' %>");
    });
    
});