<%= form_with model: post do |form| %>
  <div class="field">
    <%= form.label :title, class: 'label' %>
    <div class="control">
      <%= form.text_field :title, class:'input', placeholder: 'Title' %>
    </div>
  </div>
  
  <div class="field">
    <%= form.label :content, class: 'label' %>
    <div class="control">
      <%= form.text_area :content, id: 'editor', class:'textarea', placeholder: 'Content ...' %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= form.hidden_field :user_id, value: current_user.id %>
    </div>
  </div>
   
  <div class="control">
    <%= link_to t('page.links.comeback'), posts_path, id: 'back_page', remote: true, class: "button is-danger is-rounded mt-3" %>
    <%= form.submit nil, class: "button #{css_class_btn(action_name)} mt-3 is-rounded" %>
  </div>
      
<% end %>