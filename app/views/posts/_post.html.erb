
<section class="section" id="post_<%= post.id%>">
  <div class="container box">
    <h1 class="title">
      <%= link_to post.title, post, remote: true, class: 'show_post' %>
    </h1>
    <h3 class="subtitle">
      <%= t('page.subtitle.autor',autor: post.user.email) %>      
    </h3>
    <span class="my-5 is-pulled-right"><%= t('page.subtitle.created',time: time_ago_in_words(post.created_at)) %></span>    
    <p><%= post.content.html_safe %></p>
      <div class="like_content">
       <%= link_to 'Like', post_likes_path(post), method: :post, remote: true, class: "button is-danger like is-rounded mt-3" unless liked?(post.id) && user_signed_in? %>
       <%= link_to 'DisLike', post_like_path(post,like_id(post.id)), method: :delete, remote: true, class: "button is-danger dislike is-rounded mt-3" if liked?(post.id) && user_signed_in? %>
      
       <% if user_signed_in? && current_user.id === post.user_id %>
      <%= link_to t('page.links.edit'), edit_post_path(post), 
                                        remote: true, 
                                        class: 'button is-success is-rounded edit_post mt-3' %>

      <%= link_to t('page.links.delete', model: post.model_name), post, 
                                        method: :delete, 
                                        class: 'button is-danger is-rounded delete_post mt-3', 
                                        data:{confirm: "Tem certeza?", remote: true} %>
    <% end %>
    <span class="button is-info is-rounded mt-3"><%= "#{t('page.title.comments')} #{post.comments.count}" %></span>    
    <span class="button is-secondary is-rounded mt-3 likes"><%= "Likes #{post.likes.count}" %></span>
    </div>
  </div>
</section>