$(document).ready(function(){
  $('.edit_post').on('ajax:success', function(){
    $('#messages').remove();
    $('#root_page').text('<%= t("page.title.edit", model: @post.model_name) %>');
    $('.app').html("<%= j render 'edit' %>");

    new FroalaEditor('#editor',{
      language: 'pt_pt'
    });    
  });
});


