$(document).ready(function(){
  $("form[data-remote='true']").on('ajax:success', function(){
    $('.app').html("<%= j render 'show', post: @post %>");
    Toastify({
      text: "Created with success",
      position: "center",
      gravity: "top",
      backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)"
    }).showToast();
  });

  $("form[data-remote='true']").on('ajax:error', function(){
    alert('Something went wrong.');
  });
});