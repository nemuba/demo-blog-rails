$(document).ready(function(){
  $("form[data-remote='true']").on('ajax:success', function(){
    $('.app').html("<%= j render 'show', post: @post %>");
    Toastify({
      text: I18n.t('messages.success.create',{model: "<%= @post.model_name %>"}),
      position: "center",
      gravity: "top",
      backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)"
    }).showToast();
  });

  $("form[data-remote='true']").on('ajax:error', function(){
    Toastify({
      text: I18n.t('messages.error.create',{model: "<%= @post.model_name %>"}),
      position: "center",
      gravity: "top",
      backgroundColor: "linear-gradient(to right, #ff000b, #ff002f)"
    }).showToast();
  });
});