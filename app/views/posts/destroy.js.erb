$(document).ready(function(){
  $('.delete_post').on('ajax:success', function(){
    $('#post_<%= params[:id] %>').remove();
    $('#total_post').text("Total of the posts in blog: <%= Post.count %>")
    Toastify({
      text: "Post was deleted with successfully",
      position: "center",
      gravity: "top",
      backgroundColor: "linear-gradient(to right, #ff0000, #ff0087)"
    }).showToast();
  });

  $('.delete_post').on('ajax:error', function(){
    Toastify({
      text: "Something went wrong.",
      position: "center",
      gravity: "top",
      backgroundColor: "linear-gradient(to right, #ff0099, #ff0000)"
    }).showToast();
  });
})