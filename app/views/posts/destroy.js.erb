$(document).ready(function(){
  $('.delete_post').on('ajax:success', function(){
    $('#post_<%= params[:id] %>').remove();
    Toastify({
      text: I18n.t('messages.success.destroy',{model: "<%= Post.model_name %>"}),
      position: "center",
      gravity: "top",
      backgroundColor: "linear-gradient(to right, #ff0000, #32ff00)"
    }).showToast();
  });

  $('.delete_post').on('ajax:error', function(){
    Toastify({
      text: I18n.t('messages.error.destroy',{model: "<%= Post.model_name %>"}),
      position: "center",
      gravity: "top",
      backgroundColor: "linear-gradient(to right, #ff0099, #ff0000)"
    }).showToast();
  });
})