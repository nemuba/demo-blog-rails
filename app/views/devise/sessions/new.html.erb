<%= content_for :page_title, "Login" %>
<section class="section">
  <div class="container">
    <div class="box">
      <div class="columns">
        <div class="column is-offset-1 is-four-fifths">
          <h2 class="title">Log in</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email ,class: 'label' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'input'%>
            </div>

            <div class="field">
              <%= f.label :password ,class: 'label'%><br />
              <%= f.password_field :password, autocomplete: "current-password", class:'input' %>
            </div>

            <div class="actions">
              <%= f.submit "Log in", class: 'button is-primary is-rounded' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>